<section class="cart-show">

  <header class="page-header">
    <h1>My Cart</h1>
  </header>
  <% if enhanced_cart.length() > 0 %>
    <div class="panel panel-default items">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th colspan="2">Product</th>
            <th>Unit Price</th>
            <th>Quantity</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          <% enhanced_cart.each do |item| %>
            <%= render 'item', product: item[:product], quantity: item[:quantity].to_i %>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <th colspan="4">
              TOTAL:
            </th>
            <th>
              <%= humanized_money_with_symbol cart_subtotal_cents / 100.0 %>
            </th>
          </tr>
        </tfoot>
      </table>
    </div>
    <%# if user is not logged in they cannot cheeckout instead of pay option they will be shown login option %>
    <% if current_user %>
      <div class="row">
        <div class="col-xs-12">
          <%= form_tag orders_path do %>
            <script
              src="https://checkout.stripe.com/checkout.js" class="stripe-button"
              data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
              data-amount="<%= cart_subtotal_cents %>"
              data-name="Jungle"
              data-description="Khurram Virani's Jungle Order"
              data-locale="auto"
              data-email="kvirani@gmail.com"
              data-currency="cad">
            </script>
          <% end %>
        </div>
      </div>
    <%else%>
    <div >
      <%= link_to 'Login to checkout', '/login', class: 'btn btn-primary' %>
   </div>
    <% end%>
  <% else %>
    <div class="alert alert-info" role="alert">
      <h3 class="text-center">Your cart is Empty </h3>
      <p class="text-center">
        <i class="fa fa-hand-o-right"></i>&nbsp;
        <%= link_to 'Click here to go to home Page','/products'  %>
        </p>
    </div>
  <% end %>
</section>
